pipeline {
    agent { node { label 'AGENT-1' } }

    stages {
        stage('build') {
            steps {
            echo 'building...'
            }   
        }
        stage('test') {
            steps {
                echo 'testing'
            }
        }
        stage('Deploy') {
            steps {
                echo 'deploying'
            }
        }
    }
         post {
            always {
                echo 'i will always run whether the job is success or not'
            }
            success {
                echo 'i will run always when the job is success'
            }
            failure {
                echo 'i will run when the job fails'
            }
         }
}